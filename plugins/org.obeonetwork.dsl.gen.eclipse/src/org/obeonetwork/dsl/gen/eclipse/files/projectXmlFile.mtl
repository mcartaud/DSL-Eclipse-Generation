[module projectXmlFile('http://www.obeonetwork.org/dsl/eclipse')]

[import org::obeonetwork::dsl::gen::eclipse::common::path /]

[template private projectXmlFile(aProject : Project)]
[aProject.eContainer(Application).name/]/[if (aProject.oclIsKindOf(Feature))]features[elseif (aProject.oclIsKindOf(Repository))]repository[elseif (aProject.oclIsKindOf(Bundle))]plugins[/if]/[aProject.genBundlePath()/]/.project
[/template]

[template public genProjectXmlFile(aProject : Project)]
[file (aProject.projectXmlFile(), false, 'UTF-8')]
<?xml version="1.0" encoding="UTF-8"?>
<projectDescription>
	<name>[aProject.genBundlePath()/]</name>
	<comment></comment>
	<projects>
	</projects>
	<buildSpec>
		<buildCommand>
			<name>org.eclipse.[aProject.buildCommand()/]</name>
			<arguments>
			</arguments>
		</buildCommand>
		[if (aProject.oclIsKindOf(Bundle))]
		<buildCommand>
			<name>org.eclipse.pde.ManifestBuilder</name>
			<arguments>
			</arguments>
		</buildCommand>
		<buildCommand>
			<name>org.eclipse.pde.SchemaBuilder</name>
			<arguments>
			</arguments>
		</buildCommand>
		[/if]
	</buildSpec>
	<natures>
		[if (aProject.oclIsKindOf(Feature))]
		<nature>org.eclipse.pde.FeatureNature</nature>
		[elseif (aProject.oclIsKindOf(Repository))]
		<nature>org.eclipse.pde.UpdateSiteNature</nature>
		[else]
		<nature>org.eclipse.pde.PluginNature</nature>
		<nature>org.eclipse.jdt.core.javanature</nature>
		[/if]
	</natures>
</projectDescription>
[/file]
[/template]

[template private buildCommand(aProject : Project) post(trim())]
[if (aProject.oclIsKindOf(Feature))]
pde.FeatureBuilder
[elseif (aProject.oclIsKindOf(Repository))]
pde.UpdateSiteBuilder
[elseif (aProject.oclIsKindOf(Bundle))]
jdt.core.javabuilder
[/if]
[/template]
