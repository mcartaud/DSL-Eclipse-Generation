[module dynamicHelpPageHtmlFile('http://www.obeonetwork.org/dsl/eclipse')]

[import org::obeonetwork::dsl::gen::eclipse::common::path /]

[template private dynamicHelpPageHtmlFile(aDynamicHelp : DynamicHelp)]
