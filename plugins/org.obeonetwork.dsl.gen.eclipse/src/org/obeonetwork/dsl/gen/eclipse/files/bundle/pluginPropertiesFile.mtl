[module pluginPropertiesFile('http://www.obeonetwork.org/dsl/eclipse')]

[import org::obeonetwork::dsl::gen::eclipse::common::path /]

[template private pluginPropertiesFile(aBundle : Bundle)]
[aBundle.eContainer(Application).name/]/plugins/[aBundle.genBundlePath()/]/plugin.properties
[/template]

[template public genPluginPropertiesFile(aBundle : Bundle)]
[file (aBundle.pluginPropertiesFile(), false, 'UTF-8')]
#User information for the Bundle
Bundle-Name = [aBundle.name/]
Bundle-Provider = [aBundle.vendor/]

[if (aBundle.eAllContents(Wizard)->size() > 0)]
[aBundle.wizardInformation()/]
[/if]
[if (aBundle.natures->size() > 0)]
[aBundle.natureInformation()/]
[/if]
[if (aBundle.builders->size() > 0)]
[aBundle.builderInformation()/]
[/if]
[if (aBundle.eAllContents(View)->size() > 0)]
[aBundle.viewInformation()/]
[/if]
[if (aBundle.editors->size() > 0)]
[aBundle.editorInformation()/]
[/if]
[if (aBundle.commands->size() > 0)]
[aBundle.commandInformation()/]
[/if]
[if (aBundle.perspectives->size() > 0)]
[aBundle.perspectiveInformation()/]
[/if]
[if (aBundle.decorators->size() > 0)]
[aBundle.decoratorInformation()/]
[/if]
[if (aBundle.markers->size() > 0)]
[aBundle.markerInformation()/]
[/if]
[if (aBundle.eAllContents(Menu)->size() > 0)]
[aBundle.mnemonicInformation()/]
[/if]
[/file]
[/template]

[template private wizardInformation(aBundle : Bundle)]

#User information for the wizards
[for (aWizard : Wizard | aBundle.eAllContents(Wizard))]
[if (aWizard.category->size() > 0)]
[aWizard.category.name.toUpperFirst().replaceAll(' ', '')/]-WizardCategory-Name = [aWizard.category.name/]
[/if][aWizard.name.toUpperFirst().replaceAll(' ', '')/]-Wizard-Name = [aWizard.name/]
[aWizard.name.toUpperFirst().replaceAll(' ', '')/]-Wizard-Description = [aWizard.description/]
Wizard-[aWizard.name.substituteAll(' ', '').toUpperFirst()/]-Icon = icons/wizards/[aWizard.icon/]

[/for]
[/template]

[template private natureInformation(aBundle : Bundle)]

#User information for the natures
[for (aNature : Nature | aBundle.natures)]
[aNature.name.toUpperFirst().replaceAll(' ', '')/]-Nature-Name = [aNature.name/]

[/for]
[/template]

[template private builderInformation(aBundle : Bundle)]

#User information for the builders
[for (aBuilder : Builder | aBundle.builders)]
[aBuilder.name.toUpperFirst().replaceAll(' ', '')/]-Builder-Name = [aBuilder.name/]

[/for]
[/template]

[template private viewInformation(aBundle : Bundle)]

#User information for the views
[for (aView : View | aBundle.views)]
[if (aView.category->size() > 0)]
[aView.category.name.toUpperFirst().replaceAll(' ', '')/]-ViewCategory-Name = [aView.category.name/]
[/if][aView.name.toUpperFirst().replaceAll(' ', '')/]-View-Name = [aView.name/]
View-[aView.name.substituteAll(' ', '').toUpperFirst()/]-Icon = icons/views/[aView.icon/]

[/for]
[/template]

[template private editorInformation(aBundle : Bundle)]

#User information for the editors
[for (anEditor : Editor | aBundle.editors)]

[anEditor.name.toUpperFirst().replaceAll(' ', '')/]-Editor-Name = [anEditor.name/]
Editor-[anEditor.name.substituteAll(' ', '').toUpperFirst()/]-Icon = icons/editors/[anEditor.icon/]

[/for]
[/template]

[template private commandInformation(aBundle : Bundle)]

#User information for the commands
[for (aCommand : Command | aBundle.commands)]
[if (aCommand.category->size() > 0)]
[aCommand.category.name.toUpperFirst().replaceAll(' ', '')/]-CommandCategory-Name = [aCommand.category.name/]
[/if][aCommand.name.toUpperFirst().replaceAll(' ', '')/]-Command-Name = [aCommand.name/]
Command-[aCommand.name.substituteAll(' ', '').toUpperFirst()/]-Icon = icons/commands/[aCommand.icon/]
Command-[aCommand.name.substituteAll(' ', '').toUpperFirst()/]-Tooltip = [aCommand.tooltip/]

[/for]
[/template]

[template private decoratorInformation(aBundle : Bundle)]

#User information for the Decorators
[for (aDecorator : Decorator | aBundle.decorators)]
Decorator-[aDecorator.name.substituteAll(' ', '').toUpperFirst()/]-Icon = icons/decorators/[aDecorator.icon/]

[/for]
[/template]

[template private perspectiveInformation(aBundle : Bundle)]

#User information for the Perspectives
[for (aPerspective : Perspective | aBundle.perspectives)]
Perspective-[aPerspective.name.substituteAll(' ', '').toUpperFirst()/]-Icon = icons/perspectives/[aPerspective.icon/]
Perspective-[aPerspective.name.substituteAll(' ', '').toUpperFirst()/]-Name = [aPerspective.name/]

[/for]
[/template]

[template private markerInformation(aBundle : Bundle)]

#User information for the Markers
[for (aMarker : Marker | aBundle.markers)]
Marker-[aMarker.name.substituteAll(' ', '').toUpperFirst()/]-Name = [aMarker.name/]

[/for]
[/template]

[template private mnemonicInformation(aBundle : Bundle)]

#User information for the Menu's mnemonic
[for (aMenu : Menu | aBundle.eAllContents(Menu))][if (not(aMenu.eContainer().oclIsKindOf(View)))]
Menu-[aMenu.name.substituteAll(' ', '').toUpperFirst()/]-Mnemonic = [aMenu.mnemonic/]
[/if][/for]

#User information for the Action's mnemonic
[for (anAction : Action | aBundle.eAllContents(Action))]
Action-[anAction.name.substituteAll(' ', '').toUpperFirst()/]-Mnemonic = [anAction.mnemonic/]
[/for]
[/template]
